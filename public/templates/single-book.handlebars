<div>
    <ol class="breadcrumb hidden-sm-down">
        <li class="breadcrumb-item"><a href="#/">Home</a></li>
        <li class="breadcrumb-item"><a href="#/books?page=1&size=10">Books</a></li>
        <li class="breadcrumb-item active">{{{title}}}</li>  
    </ol>
</div>

<div class="header-all-books grad">
    <h2 id="title" data-id = {{_id}}>{{title}}</h2>
    <h4>By {{author}}</h4>
</div>

<div class="row">
<main class="col-md-12 col-lg-10">
    <div class="book-post-info">
        <p>Posted by <span>Admin</span> on March 13, 2011 | {{#reviews}}{{../reviews.length}}{{/reviews}} Reviews</p>
    </div>
    {{!--<div class="col-md-8">--}}
    <div class="row col-md-12">
    <div class="display-horizontal container-book-info col-md-12">
        <div class="display-column-sb col-md-4">
            <img class="img-fluid img-border img-size" src="{{coverUrl}}">
            <p>{{author}}</p>
            <fieldset class="rating">
                <input type="radio" id="star5" name="rating" value="5" /><label class = "full" for="star5" title="Awesome - 5 stars"></label>
                <input type="radio" id="star4half" name="rating" value="4 and a half" /><label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
                <input type="radio" id="star4" name="rating" value="4" /><label class = "full" for="star4" title="Pretty good - 4 stars"></label>
                <input type="radio" id="star3half" name="rating" value="3 and a half" /><label class="half" for="star3half" title="Meh - 3.5 stars"></label>
                <input type="radio" id="star3" name="rating" value="3" /><label class = "full" for="star3" title="Meh - 3 stars"></label>
                <input type="radio" id="star2half" name="rating" value="2 and a half" /><label class="half" for="star2half" title="Kinda bad - 2.5 stars"></label>
                <input type="radio" id="star2" name="rating" value="2" /><label class = "full" for="star2" title="Kinda bad - 2 stars"></label>
                <input type="radio" id="star1half" name="rating" value="1 and a half" /><label class="half" for="star1half" title="Meh - 1.5 stars"></label>
                <input type="radio" id="star1" name="rating" value="1" /><label class = "full" for="star1" title="Sucks big time - 1 star"></label>
                <input type="radio" id="starhalf" name="rating" value="half" /><label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>
            </fieldset>

            <div class="dropdown change-status hidden-when-not-logged-in">
                <button class="btn btn-secondary btn-change-status dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Change status<span class="caret"></span>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                    <button data-status="want-to-read" class="dropdown-item" type="button">Want to read</button>
                    <button data-status="currently-reading" class="dropdown-item" type="button">Currently reading</button>
                    <button data-status="read" class="dropdown-item" type="button">Read</button>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            {{#if description}}
                <p class="read-more hidden-md-down">{{description}}</p>
                <p class="mobile-read-more hidden-sm-up">{{description}}</p>
                <p class="middle-read-more hidden-sm-down hidden-lg-up">{{description}}</p>                
                {{else}}
                <p>No description to this book.</p>
            {{/if}}
        </div>
    </div>
        {{!--<p>Genres: </p>
            {{#genres}}
                <p>{{this}}</p>
            {{/genres}}--}}
        {{!--<p>Pages: {{pages}}</p>     --}}
    </div>
    {{!--<div class="change-status">
        <h3>Status</h3>
        <button type="radio" data-status="want-to-read" class="btn btn-success btn-change-status">Want to read</button>
        <button type="radio" data-status="currently-reading" class="btn btn-success btn-change-status">Currently reading</button>
        <button type="radio" data-status="read" class=" btn btn-success btn-change-status">Read</button>
    </div>--}}
    {{!--<div class="row">--}}
        <div class="container-reviews">
            <h2 class="mb-5">{{#reviews}}{{../reviews.length}}{{/reviews}} Reviews</h2>
                {{#if reviews}}
                {{#reviews}}
                <div class="media talk-bubble tri-right border btm-right-in grad">
                        <img class="media-object pull-left img-fluid img-border img-review" src="./images/photo.jpg">
                    <div class="media-body mt-0">
                            <h4 class="media-heading">{{this.username}}:</h4>
                            <p class="talktext">{{this.review}}</p>
                    </div>
                </div>
                {{/reviews}}
                {{else}}
                    <p>Yours will be the first.</p>
                {{/if}}
        </div>
        <div class="container-new-review hidden-when-not-logged-in">
            <h2 class="container-new-review">Write a review</h2>
            <div class="form-group container-new-review">
                <textarea rows="5" class="grad col-md-10 form-control" id="tb-review" type="text"></textarea>
                <button class="btn-send-review" id="btn-review-send">Send review</button>
            </div>
        </div>
    {{!--</div>--}}
    
