<h1>Single Book</h1>

<div>
    <img class="img-responsive img-thumbnail" src="{{coverUrl}}">
    <h3 id="title" data-id = {{_id}}>{{title}}</h3>
    <h3>Author: {{author}}</h3>
    <p>Genres: </p>
    <p>Pages: {{pages}}</p>
    <p>Description: {{description}}</p>
</div>
<div class="change-status">
    <h3>Status</h3>
    <button type="radio" data-status="want-to-read" class="btn btn-success btn-change-status">Want to read</button>
    <button type="radio" data-status="currently-reading" class="btn btn-success btn-change-status">Currently reading</button>
    <button type="radio" data-status="read" class=" btn btn-success btn-change-status">Read</button>
</div>
<div>
    <h2>Reviews:</h2>
    {{#if reviews}}
    {{#reviews}}
        <a href="#">{{this.username}}:</a>
        <p>{{this.review}}</p>
    {{/reviews}}
    {{else}}
        <p>Yours will be the first.</p>
    {{/if}}
</div>
<div class="form-group">
    <textarea id="tb-review" type="text" class="form-control"></textarea>
    <button id="btn-review-send" class="btn btn-primary">Send</button>
</div>