<h1 class="header-all-books grad">Add new book</h1>

<form class="offset-md-2 col-md-8 form-add-book">
    <div class="form-group">
        <label for="tb-title"><h4>Title:</h4></label>
        <input type="text" id="tb-title" class="form-control">
    </div>
    <div class="form-group">
        <label for="tb-author"><h4>Author:</h4></label>
        <input type="text" id="tb-author" class="form-control">
    </div>
    <div class="form-group">
        <label for="tb-genres"><h4>Genres:</h4></label>
        <input type="text" id="tb-genres" class="form-control">
    </div>
    <div class="form-group">
        <label for="tb-description"><h4>Description:</h4></label>
        <textarea id="tb-description" rows="4" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="tb-pages"><h4>Pages:</h4></label>
        <input type="text" id="tb-pages" class="form-control">
    </div>
    <div class="form-group">
        <label for="tb-cover"><h4>Cover:</h4></label>
        <input type="text" id="tb-cover" class="form-control">
    </div>
        <button class="btn btn-add" id="btn-add-book">Add book</button>
    </div>
</form>