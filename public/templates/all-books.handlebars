<h1 class="header-all-books grad">All Books</h1>

<div class="container-all-books">
    {{#books}}
    <div class="container-book">
        <div class="container-title">
            <a class="container-book-title" href="#/books/{{_id}}"><h3>{{{title}}}</h3></a>
            <a class="container-book-author" href="#"><h4>Author: {{author}}</h4></a>
        </div>
        <div>
            <img class="img-size" src="{{coverUrl}}">
        </div>
        {{!--<div> 
            <h4>Pages: {{pages}}</h4>
        </div>--}}
    </div>
    {{/books}}
</div>
<div class="pager">
    <div class="previous">
        <a href="#/books?page={{prevPage}}&size=10" class="btn btn-info {{#if firstPage}}disabled{{/if}}">Prev</a>
    </div>
    <div class="next">
        <a href="#/books?page={{nextPage}}&size=10" class="btn btn-info {{#if lastPage}}disabled{{/if}}">Next</a>
    </div>
</div>