<h1>All Books</h1>

<div>
    {{#books}}
        <div>
            <img class="img-responsive img-thumbnail" src="{{coverUrl}}">
        </div>
        <div>
            <a href="#/books/{{_id}}"><h3>{{{title}}}</h3></a>
            <a href="#"><h4>Author: {{author}}</h4></a>
            <h4>Pages: {{pages}}</h4>
        </div>
    {{/books}}
</div>
<div class="pager">
    <div class="previous">
        <a href="#/books?page={{prevPage}}&size=10" class="btn btn-info {{#if firstPage}}disabled{{/if}}">Prev</a>
    </div>
    <div class="next">
        <a href="#/books?page={{nextPage}}&size=10" class="btn btn-info {{#if lastPage}}disabled{{/if}}">Next</a>
    </div>
</div>