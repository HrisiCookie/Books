<h1 class="header-all-books grad">All Books</h1>

<div class="container-all-books">
    {{#books}}
    <div class="container-book">
        <div class="container-title">
            <a class="" href="#/books/{{_id}}"><h4 class="container-book-title">{{{title}}}</h4></a>
            <p class="container-book-author">Author: {{author}}</p>
        </div>
        <div>
            <a href="#/books/{{_id}}"><img class="img-fluid img-size img-border" src="{{coverUrl}}"></a>
        </div>
        {{!--<div> 
            <h4>Pages: {{pages}}</h4>
        </div>--}}
    </div>
    {{/books}}
</div>
<div class="pager">
    <div class="previous">
        <a href="#/books?page={{prevPage}}&size=10" class="btn btn-info {{#if firstPage}}disabled{{/if}}">Prev</a>
    </div>
    <div class="next">
        <a href="#/books?page={{nextPage}}&size=10" class="btn btn-info {{#if lastPage}}disabled{{/if}}">Next</a>
    </div>
</div>