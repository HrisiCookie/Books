<div class="register-form">
    <h1>Sign In</h1>

    <div class="form-group">
        <label for="tb-username">Username:</label>
        <div class="input-group">
            <input id="tb-username" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="tb-password">Password:</label>
        <div class="input-group">
            <input id="tb-password" type="password" class="form-control">
        </div>
    </div>
    <button class="btn btn-success" id="btn-login">Sign In</button>
</div>